{
  "AllowedOrigins": [ "https://admin.yourdomain" ],

  "ConnectionStrings": {
    "Default": "" // ĐỂ TRỐNG ở repo. Sẽ cấp qua ENV: ConnectionStrings__Default
  },

  "FileStorage": {
    "Root": "/var/vndocsign/data"
  },

  "Ssm": {
    "BaseUrl": "https://ssm.yourdomain",
    "UseBearer": true,
    "StaticBearer": "" // nếu SSM của bạn có token tĩnh thì set qua ENV: Ssm__StaticBearer
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
